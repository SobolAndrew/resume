<header>
    {{#with navigation}}
    <div class="card mb-5">
        <div class="nav py-2">
            {{#each links}}
            <div class="nav-item ">
                <a href="{{href}}" target="_blank" class="nav-link {{#unless href}}disabled{{/unless}} ">{{text}}</a>
            </div>
            {{/each}} {{!-- each_link --}}

        </div>
    </div>
    {{/with}} {{!-- with-navigation --}}
</header>
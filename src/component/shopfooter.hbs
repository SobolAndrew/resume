<footer>
    <div>
        <hr class="mt-5">
    </div>

    <div class="row">
        {{#each footer}}

        <div class="col-2 ">
            <nav class="nav flex-column">
                {{#each this}}
                {{#if @first}}<a class="nav-link active" aria-current="page" href="{{link}}">{{text}}</a>
                {{else}}
                <a class="nav-link {{#if @last}}disabled{{/if}}" href="{{link}}">{{text}}</a>
                {{/if}}
                {{/each}} {{!-- each_this --}}
            </nav>
        </div>
        {{/each}} {{!-- each_footer --}}
    </div>
</footer>
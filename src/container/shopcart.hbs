<main>

    <head>
        {{#with header}}
        <h1>{{title}}</h1>
        {{#with button}}
        <a href="{{link}}" class="btn btn-outline-secondary">{{text}}</a>
        {{/with}} {{!-- button --}}
        {{/with}} {{!-- header --}}
    </head>


    <hr class="my-5">

    <section>
        <div class="row g-5">
            <div class="col">
                {{#each goodsBlock}}
                {{> cartGoodsItem}}
                {{/each}} {{!-- {{#each_goodsBlock}} --}}
            </div>
        </div> {{!-- div_row_g-5 --}}
    </section>

    <hr class="my-5">

    <section>


        {{#with total}}
        <div class="row">
            <div class="col">
                <h2>{{title}}</h2>
                <h1>{{amount}}</h1>
                <p>{{delivery}}</p>

                {{#each buttons}}
                <div>
                    <a href="{{link}}" target="_blank"
                        class="btn {{#unless @first}}mt-3{{/unless}} {{#if isSuccess}}btn-success{{/if}}{{#if isOutline}}btn-outline-success{{/if}}">
                        {{text}}</a>
                </div>
                {{/each}}
            </div>
        </div>
        {{/with}}
    </section>

    <hr class="my-5">

    <section>
        <div class="row">
            {{#with goodsOtherBlock}}
            <h3 class="text-center">{{title}}</h3>

            {{> shopcard}}
            {{/with}}
        </div>
    </section> {{!-- goodsOtherBlock --}}

    <hr class="my-5">

    <section>

        {{#with subscribe}}
        <div class="card text-bg-dark">

            <div class="card-body text-bg-dark">
                <h2 class="card-title">{{header}}</h2>
                <p class="card-text mt-3">{{description}}</p>

                {{#each buttons}}
                <div>
                    <a href="{{link}}" target="_blank" class="btn btn-primary my-2">
                        {{text}}</a>
                </div>
                {{/each}}
            </div>

        </div>
        {{/with}}

    </section>

</main>
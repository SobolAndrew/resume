<div>
    <h1>Program</h1>

    {{#with program}}

    <h2>Excursion</h2>
    {{#with excursion}}

    <h3><em>{{name}}</em> </h3>
    <b>Location:</b> {{#with location}}{{city}}, {{country}}{{/with}}<br>
    <date>{{date}}</date><br>

    <h4>Program:</h4>
    <ul>{{#each program}}
        <li>

            <b>Name:</b> {{name}}<br>
            <b>Type:</b> {{type}}<br>
            <b>Duration:</b> {{duration}}<br>

            <ul>
                <h4>Details:</h4>
                <li>
                    {{#with details}}

<main>
    <div>
        <h1 class="mb-5">Program</h1>

        {{#with program}}

        <h2 class="mb-5">Excursion</h2>
        {{#with excursion}}

        <h3 class="mb-2"><em>{{name}}</em> </h3>
        <b>Location:</b>
        <div>{{#with location}}{{city}}, {{country}}{{/with}}</div>
        <date class="mb-5">{{date}}</date>

        <h4 class="mt-5">Program:</h4>
        <ul>{{#each program}}
            <li class="my-5">

                <h5>{{name}}</h5>
                <div><b>Type:</b> {{type}}</div>
                <div><b>Duration:</b> {{duration}}</div>

                <ul>
                    <h4 class="mt-3">Details:</h4>
                    <li class="mt-3">
                        {{#with details}}
                        {{#if museum}}{{#with museum}}
                        <div>Museum: {{name}}</div>
                        <div>Location:
                            {{#with location}}
                            {{address}}, {{city}}, {{ountry}}
                            {{/with}} {{!-- with_location --}}
                        </div>
                        <ol>
                            <h5 class="mt-4">Exhibits:</h5>
                            {{#each exhibits}}
                            <li class="mt-4">

                                <div>Name: {{name}},</div>
                                {{#if artist}}
                                <div>Artist: {{artist}}</div>
                                {{/if}}
                                <div>Description: {{description}}</div>
                                {{#if audio_guide}}<div>audio_guide:</div>{{/if}}

                            </li>
                            {{/each}} {{!-- each_exhibits --}}
                            {{#with ../guide}}
                            <div>name: {{name}}</div>
                            <div>language: {{language}}</div>
                            <div>rating: {{rating}}</div>
                            {{/with}} {{!-- each_../guide --}}
                        </ol>

                        {{/with}} {{!-- with_museum --}}


                        {{/if}} {{!-- if_museum --}}

                        {{!-- //============================= --}}

                        {{#if venue}}{{#with venue}}
                        <div>Venue: {{name}}</div>
                        <div>Location: {{#with location}}
                            {{address}}, {{city}}, {{ountry}}
                            {{/with}} {{!-- with_location --}}
                        </div>
                        <ol>
                            <h5 class="mt-4">Performers:</h5>
                            {{#each ../performers}}
                            <li class="mt-4">

                                <div>Name: {{name}},</div>

                                <div>Type: {{type}}</div>


                            </li>
                            {{/each}} {{!-- each_performers: --}}
                            {{#with ../guide}}
                            <div>name: {{name}}</div>
                            <div>language: {{language}}</div>
                            <div>rating: {{rating}}</div>
                            {{/with}} {{!-- each_../guide --}}
                        </ol>

                        {{/with}} {{!-- with_venue --}}


                        {{/if}} {{!-- if_venue --}}
                        {{/with}}{{!-- with_details --}}




                    </li>
                </ul>

            </li>
            {{/each}} {{!-- each_program_2 --}}
        </ul>
        {{/with}} {{!-- with_excursion --}}

        {{/with}}{{!-- with_program_1 --}}
    </div>
</main>
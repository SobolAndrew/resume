<main>

    <h1>Web</h1>
    {{#with web}}
    <h2 class="my-5">Languages:</h2>
    <ol>
        {{#each languages}}

        {{!-- ========================================================= --}}

        {{#if elements}}
        <li class="my-5">
            <h3 class="my-3">{{name}}</h3>
            <div>Version: {{version}}</div>
            <div>Description: <em>{{description}}</em></div>

            <h3 class="my-3">Elements:</h3>
            <ul> {{#each elements}}
                <li class="my-3">
                    <div><b>Name:</b><mark> {{name}}</mark></div>
                    <div>Description: <em>{{description}}</em></div>

                    <h4 class="my-3">Attributes:</h4>
                    <ul>{{#each attributes}}
                        <li class="my-3">
                            <div>Name: {{name}}</div>
                            <div>Description: {{description}}</div>
                        </li>
                        {{/each}} {{!-- each_attributes --}}
                    </ul>
                </li>
                {{/each}} {{!-- each_elements --}}
            </ul>
        </li>
        <hr class="my-4">
        {{/if}} {{!-- if_html --}}

        {{!-- ========================================================= --}}

        {{#if properties}}
        <li class="my-5">
            <h3 class="my-3"><mark>{{name}}</mark></h3>
            <div>Version: {{version}}</div>
            <div>Description: <em>{{description}}</em></div>

            <h4 class="my-3">Properties:</h4>
            <ul> {{#each properties}}
                <li class="my-5">
                    <div><b>Name:</b> <mark>{{name}}</mark></div>
                    <div>Description: <em>{{description}}</em></div>

                    <h4 class="my-3">Values:</h4>
                    <ul>{{#each values}}
                        <li class="my-3">
                            <div>Value: {{value}}</div>
                            <div>Description: {{description}}</div>
                        </li>
                        {{/each}} {{!-- each_values --}}
                    </ul>
                </li>
                {{/each}} {{!-- each_properties --}}
            </ul>
        </li>
        <hr class="my-4">
        {{/if}} {{!-- if_properties --}}

        {{!-- ========================================================= --}}


        {{#if functions}}
        <li class="my-5">
            <h3 class="my-3"><mark>{{name}}</mark></h3>
            <div>Version: {{version}}</div>
            <div>Description: <em>{{description}}</em></div>

            <h4 class="my-3">Functions:</h4>
            <ul> {{#each functions}}
                <li class="my-3">
                    <div><b>Name:</b> <mark>{{name}}</mark></div>
                    <div>Description: <em>{{description}}</em></div>

                    <h4 class="my-3">Description:</h4>
                    <ul>{{#each parameters}}
                        <li class="my-3">
                            <div>Name: {{name}}</div>
                            <div>Type: {{type}}</div>
                            <div>Description: {{description}}</div>
                        </li>
                        {{/each}} {{!-- each_parameters --}}
                    </ul>
                </li>
                {{/each}} {{!-- each_description --}}
            </ul>
        </li>

        {{/if}} {{!-- if_functions --}}

        {{!-- ========================================================= --}}

        {{/each}} {{!-- each_languages --}}
    </ol>
    {{/with}} {{!-- with_web --}}

</main>
<main>


    <div class="row g-5">

        <div class="col-8">{{#with formBlock}}
            <h1>{{header}}</h1>
            {{#with rating}}
            <p class="my-4">{{title}}: {{value}}</p>
            {{/with}} {{!--rating--}}

            {{#with actionBlock}}
            <ul class="nav nav-tabs my-4">{{#each tabs}}
                {{#if isActive}} <li class="nav-item">
                    <a class="nav-link active" aria-current="page" href="#">{{text}}</a>
                </li>{{else}}
                <li class="nav-item">
                    <a class="nav-link" href="#">{{text}}</a>
                </li>{{/if}}

                {{/each}}{{!-- tabs--}}
            </ul>

            <hr class="my-5">

            <div class="card">
                <div class="card-body">
                    {{#with report}}
                    <div class="card-title">{{title}}</div>
                    <a href="{{button.link}}" class="btn btn-secondary">{{button.text}}</a>
                    {{/with}}
                </div>
            </div>



            {{/with}} {{!--actionBlock--}}

            <hr class="my-5">

            {{#with feedbackBlock}}
            <h2 class="my-5">{{title}}</h2>

            {{#each buttons}}
            <a href="link" class="btn 
            {{#if isWarning}}btn-warning{{/if}}
            {{#if isSuccess}}btn-success{{/if}}
            {{#if isDanger}}btn-danger{{/if}} me-2
            ">{{text}}</a>
            {{/each}}
            {{/with}} {{!--feedbackBlock--}}

        </div>

        <div class="col-4">
            {{#with goodsInfo}}
            <div class="card">
                <div class="row">
                    <div class="card-body">
                        <div class="col-6 ps-3">
                            <img src="{{photo}}" class="card-img" alt="{{name}}">
                            <div class="mt-3">
                                <b>{{name}}</b>
                            </div>
                        </div>

                    </div>
                </div>
            </div>

            <div class="card my-3">
                <div class="card-body">
                    <h5 class="card-title">{{price}}</h5>
                    <p>{{#if inMarket}}Є в наявності{{else}}Немає в наявності{{/if}}</p>
                    {{#each buttons}}
                    <div {{#if @first}}class="mb-2" {{/if}}><a href="{{link}}" class="btn 
                            {{#if isPrimary}}btn-primary{{/if}}
                            {{#if isSecondary}}btn-secondary{{/if}}">
                            {{text}}
                        </a>
                    </div>
                    {{/each}}
                </div>
            </div>

            <div class="card ">
                <div class="card-body">
                    {{#with seller}}
                    <span>{{title}}: <b>{{value}}</b></span>
                    {{/with}}

                </div>
            </div>
            {{/with}} {{!--goodsInfo--}}

        </div>
        {{/with}} {{!--formBlock--}}

        <div class="col">
            <hr class="my-5">

            {{#each reviewList}}
            {{> reviewItem}}
            {{/each}} {{!-- reviewList --}}


        </div>
        {{> shopaction}}
    </div>












</main>
<main>
    <div class="row ">
        {{> breadcrumbs}}
        <h1>{{header}}</h1>


        {{#each sortBlock}}
        <div class="col-3 mb-4">
            <select class="form-select" aria-label="Default select example">
                <option selected>{{placeholder}}</option>
                {{#each options}}
                <option value="{{value}}">{{text}}</option>
                {{/each}}

            </select>

        </div>
        {{/each}} {{!--sortBlock--}}
        <div class="col-4">
            <div class="card">
                <div class="card-body">
                    {{#with filterBlock}}

                    {{#with sellers}}
                    <div class="card-title mb-3">{{title}}</div>
                    {{#each list}}
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                        <label class="form-check-label" for="flexCheckDefault">
                            {{value}}
                        </label>
                    </div>
                    {{/each}}
                    {{/with}} {{!-- sellers --}}

                    <hr class="my-3">

                    {{#with brands}}
                    <div class="card-title mb-3">{{title}}</div>
                    <input class="form-control my-3" placeholder="{{input.placeholder}}">


                    {{#each options}}
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                        <label class="form-check-label" for="flexCheckDefault">
                            {{value}}
                        </label>
                    </div>
                    {{/each}}
                    {{/with}} {{!-- brands --}}

                    <hr class="my-4">

                    {{#with price}}
                    <div class="card-title mb-3">{{title}}</div>
                    {{#with range}}
                    <input class="form-control my-3" placeholder="{{from}}">
                    <input class="form-control my-3" placeholder="{{to}}">

                    {{/with}} {{!-- range --}}

                    {{#with button}}
                    <a href="{{link}}" class="btn btn-outline-secondary">{{text}}</a>
                    {{/with}} {{!-- button --}}

                    {{/with}} {{!-- price --}}



                    {{#each filterList}}
                    <hr class="my-4">
                    <p>{{title}}</p>
                    {{#each options}}<div class="form-check">

                        <input class="form-checked-input" type="checkbox">

                        <label class="form check-label">{{value}}</label>
                    </div>

                    {{/each}}
                    {{/each}} {{!-- filterList--}}

                    {{/with}} {{!-- filterBlock--}}
                </div>
            </div>
        </div>

        <div class="col-8">
            <div class="row g-3">
                {{#each goodsList}}
                <div class="col-6">
                    {{> catalogItem}}
                </div>

                {{/each}} {{!-- goodsList--}}

            </div>
        </div>
        <p class="my-4">{{title}} {{value}}</p>





        {{> shopaction}}
    </div>












</main>
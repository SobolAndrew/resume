Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>

    <main>
        <section class="mb-5">
            <div class="row">
                {{#each main}}
                <div class="col-6">{{#with this}}
                    <div class="card">
                        <div class="card-body">

                            <h2 class="card-title mb-4">{{title}}</h2>
                            <p>
                                {{text}}
                            </p>

                        </div>
                    </div>


                    {{/with}}
                </div>
                {{/each}}
            </div>
        </section>
    </main>

</div>


<main>
    <section>
        {{#with newsBlock}}
        <h2 class="text-center">{{title}}</h2>
        <div class="row">
            {{#each cards}}
            <div class="col-3 g-5">
                <div class="card">
                    <div class="card-body text-bg-dark">
                        <h5 class="card-title">{{title}}</h5>
                        {{#if isTop}}<span class="badge rounded-pill text-bg-danger">Top</span> {{/if}}
                        {{#if isNew}}<span class="badge rounded-pill text-bg-success">New</span> {{/if}}
                        <p class="card-text">{{description}}</p>

                    </div>

                </div>
            </div>
            {{/each}}{{!-- each_cards --}}

            {{!-- {{> shoppost}} --}}
        </div>
    </section>
    {{/with}} {{!-- with-newsBlock --}}
    </section>
    <hr class="my-5">

    <section>
        {{#with goodsBlock}}
        <div class="row">
            <ul class="nav nav-tabs">
                {{#each tabs}}
                <div class="col-2">
                    <li class="nav-item">
                        {{#if isActive}}<a class="nav-link active text-center" aria-current="page" href="#">{{text}}</a>
                        {{else isDisabled}}<a class="nav-link disabled text-center" href="#">{{text}}</a>
                        {{else }}<a class="nav-link text-center" href="#">{{text}}</a>{{/if}}

                    </li>
                </div>
                {{/each}} {{!-- each_tabs --}}
            </ul>
            {{> shopcard}}


        </div>

        {{/with}} {{!-- with-goodsBlock --}}
    </section>
    <hr class="my-5">

    <section>
        {{#with subscribe}}
        <div class="card text-bg-dark">
            <div class="card-body">
                <h2 class="card-title mb-3">{{header}}</h2>
                <p class="card-text">{{description}}</p>
                {{#each buttons}}
                <a href="{{link}}" class="btn btn-primary mb-3">{{text}}</a><br>
                {{/each}} {{!-- each_buttons --}}
            </div>
        </div>
        {{/with}} {{!-- with-subscribe --}}
    </section>


    {{> shopaction}}






</main>
{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    {{#with main}}
    <main>
        <section>
            {{> title data="Work history" big=true}}
            <div>
                <ul>
                    {{#each works}}
                    <li class="my-3">
                        <h3 class="my-5">{{position}}</h3>



                        <div>{{duration.from}} -
                            {{#if duration.to}}
                            {{duration.to}}
                            {{else}}
                            (досі працюємо)
                            {{/if}}
                        </div>



                        {{!-- <div><a href="{{company.url}}" target="_blank">{{company.name}}</a></div> --}}
                        <div class="mt-3">{{#if company.url}}
                            {{>link text=company.name href=company.url blank=true}}
                            {{else}}
                            <b>{{company.name}}</b>
                            {{/if}}
                        </div>


                        <h5 class="my-5">Pojects ({{projectAmount}})</h5>



                        <ul>
                            {{#each projects}}
                            <li>
                                <div>{{>link text=name href=url blank=true noLine=true}}</div>
                                <div>
                                    <p>{{about}}</p>
                                </div>
                            </li>

                            <h6 class="mt-5">Project stacks ({{stackAmount}})</h6>

                            {{#each stacks}}
                            <li class="my-1">
                                <div>{{name}}</div>
                            </li>
                            {{/each}}

                            <h6 class="mt-5">Project awards</h6>

                            {{#each awards}}
                            <li class="my-1">
                                <div>{{name}}</div>
                            </li>
                            {{/each}}
                            {{/each}}
                        </ul>
                    </li>
                    <br>
                    {{/each}}
                </ul>
            </div>
        </section>
    </main>
    {{/with}}
</div>

{{!--
Цей код містить лише те, що буде виводитись в {{{body}}} в layout/default.hbs
Адже наш layout/default.hbs має вже структуру HTML
--}}